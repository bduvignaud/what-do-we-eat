<p id="notice"><%= notice %></p>

<div class="recipes">
  <% if @recipes.empty? %>
    <span class="no_recipes">Désolé nous n'avons pas trouvé de recettes :(</span>
  <% end  %>
  <% @recipes.each do |recipe| %>
    <div class="recipe">
      <h4><%= recipe.name %></h4>
      Temps de préparation/cuisson/total : <br><%= recipe.prep_time %>min / <%= recipe.cook_time %>min / <%= recipe.total_time %>min <br>
      <%= recipe.budget.capitalize %> / <%= recipe.difficulty.capitalize %> <br>
      Pour <%= recipe.people_quantity %> personnes <br>
      Ingredients :
      <ul>
        <% recipe.ingredients.each do |ingredient| %>
          <li><%= ingredient.name %></li>
        <% end %>
      </ul>
      <br>
      Recette par <%= recipe.author.name %><br>
      Note : <%= recipe.rate %>/5
      <br><br>
      Tags: <%= recipe.tags.pluck(:name).join(', ') %>
    </div>
  <% end %>
</div>


<br>
<%= link_to 'Revenir à la recherche', root_path %>
